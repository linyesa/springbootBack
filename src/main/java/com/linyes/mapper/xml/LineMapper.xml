<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linyes.mapper.LineMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.linyes.pojo.Line">
        <id column="id" property="id" />
        <result column="line_name" property="lineName" />
        <result column="line_category" property="lineCategory" />
        <result column="sort" property="sort" />
        <result column="line_amount" property="lineAmount" />
        <result column="img" property="img" />
        <result column="remark" property="remark" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, line_name, line_category, sort, line_amount, img, remark
    </sql>

</mapper>
